<!-- Views/CreateFood.cshtml -->
@model Duanmau.Web.API.Models.Ingredient

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Ingredient</title>
    <style>
        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Style cho các label */
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        /* Style cho input và select */
        input[type="text"],
        textarea,
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        /* Style cho các nút */
        button[type="submit"] {
            padding: 10px 20px;
            background-color: #4caf50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #45a049;
            }

        h2 {
            text-align: center; /* Căn giữa nội dung */
            margin-top: 20px; /* Khoảng cách từ phía trên */
        }
    </style>
</head>
<body>
    <h2>Thêm Nguyên Liệu</h2>
    <!-- Form tạo sản phẩm -->
    <form asp-controller="Admin_ingredient" asp-action="IngredientSave" method="post">
        <div class="form-group">
            <label for="IngredientName">Tên Nguyên Liệu:</label>
            <input type="text" class="form-control" id="IngredientName" name="IngredientName">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-controller="Admin_ingredient" asp-action="IngredientAll" class="btn btn-secondary">Quay Lại</a>
    </form>
</body>
</html>