<!-- Views/FoodDetails.cshtml -->
@model Duanmau.Web.API.Models.Food

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Details</title>
    <style>
        /* Style cho phần tử div chứa thông tin chi tiết sản phẩm */
        .Food-details {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
            margin: 20px;
        }

            /* Style cho tiêu đề */
            .Food-details h4 {
                color: #333;
                font-size: 24px;
                margin-bottom: 10px;
            }

            /* Style cho các thông tin sản phẩm */
            .Food-details p {
                margin: 5px 0;
                font-size: 16px;
                color: #555;
            }

            /* Style cho nút Edit và Back */
            .Food-details form button {
                margin-top: 10px;
                padding: 8px 16px;
                background-color: #4caf50;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .Food-details form button:hover {
                    background-color: #45a049;
                }

        /* Style cho nút Edit và Back */
        form button[type="submit"] {
            margin-top: 10px;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        form button[type="submit"]:hover {
            opacity: 0.8; /* Hiệu ứng mờ khi di chuột qua */
        }

        /* Định dạng nút Edit */
        form[action="EditFood"] button[type="submit"] {
            background-color: #4caf50; /* Màu nền cho nút Edit */
            color: white; /* Màu chữ cho nút Edit */
        }

        /* Định dạng nút Back */
        form[action="FoodAll"] button[type="submit"] {
            background-color: #4caf50; /* Màu nền cho nút Back */
            color: #333; /* Màu chữ cho nút Back */
        }

            /* Hover effect cho nút Back */
            form[action="FoodAll"] button[type="submit"]:hover {
                background-color: #4caf50; /* Màu nền khi di chuột qua cho nút Back */
            }

    </style>
</head>
<body>
    <!-- Phần mã HTML còn lại của bạn -->
    <h3>Food Details</h3>

     @if (Model != null)
    {
        <div>
            <p><strong>FoodId:</strong> @Model.FoodId</p>
            <p><strong>FoodName:</strong> @Model.FoodName</p>
            <p><strong>Price:</strong> @Model.Price</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Mota:</strong> @Model.Mota</p>
            <p><strong>RemainingQuantity:</strong> @Model.RemainingQuantity</p>
        </div>
         <form asp-controller="Admin" asp-action="FoodEdit" method="get">
            <input type="hidden" name="id" value="@Model.FoodId" />
            <button type="submit" style="background-color:#4caf50; color:white;">Edit</button>
        </form>
        <form asp-controller="Admin" asp-action="FoodAll" method="get">
            <button type="submit" style="background-color:#4caf50; color:white;">Back</button>
        </form> 
    }
    else
    {
        <p>Food not found.</p>
    } 
</body>
</html>
