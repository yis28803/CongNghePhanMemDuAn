<!-- Views/CreateFood.cshtml -->
@model Duanmau.Web.API.Models.Food

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Food</title>
    <!-- Liên kết tệp CSS -->
    <style>
        /* CreateFoodStyles.css */
        /* Style cho các nhãn label */
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333; /* Màu chữ */
        }

        /* Style cho input và select */
        input[type="text"],
        textarea,
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        /* Style cho các nút */
        button[type="submit"] {
            padding: 10px 20px;
            background-color: #4caf50; /* Màu nền */
            color: #fff; /* Màu chữ */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

            button[type="submit"]:hover {
                background-color: #45a049; /* Màu nền khi di chuột qua */
            }

    </style>
    @* <link rel="stylesheet" href="~/css/CreateFoodStyles.css"> *@
</head>
<body>
    <h2>Create Food</h2>
    <!-- Form tạo sản phẩm -->
    <form asp-controller="Admin" asp-action="FoodSave" method="post">
        <div>
            <label for="foodName">Tên món ăn:</label>
            <input type="text" id="foodName" name="foodName">
        </div>
        <div>
            <label for="price">Giá:</label>
            <input type="number" id="price" name="price">
        </div>
        <div>
            <label for="status">Trạng thái:</label>
            <input type="number" id="status" name="status">
        </div>
        <div>
            <label for="mota">Mô tả:</label>
            <textarea id="mota" name="mota"></textarea>
        </div>
        <div>
            <label for="remainingQuantity">Số lượng còn lại:</label>
            <input type="number" id="remainingQuantity" name="remainingQuantity">
        </div>
        <button type="submit" style="background-color: green; color: white;">Lưu sản phẩm</button>
    </form>
    
     <form asp-controller="Admin" asp-action="FoodAll">
        <button type="submit">Back</button>
    </form>  
</body>
</html>
