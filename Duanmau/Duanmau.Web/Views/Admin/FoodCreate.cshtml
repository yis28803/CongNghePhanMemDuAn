<!-- Views/CreateFood.cshtml -->
@model Duanmau.Web.API.Models.Food

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Food</title>
    <style>
        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Style cho các label */
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        /* Style cho input và select */
        input[type="text"],
        textarea,
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        /* Style cho các nút */
        button[type="submit"] {
            padding: 10px 20px;
            background-color: #4caf50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #45a049;
            }

        h2 {
            text-align: center; /* Căn giữa nội dung */
            margin-top: 20px; /* Khoảng cách từ phía trên */
        }
    </style>
    @* <link rel="stylesheet" href="~/css/CreateFoodStyles.css"> *@
</head>
<body>
    <h2>Create Food</h2>
    <!-- Form tạo sản phẩm -->
    <form asp-controller="Admin" asp-action="FoodSave" method="post">
        <div class="form-group">
            <label for="foodName">Food Name:</label>
            <input type="text" class="form-control" id="foodName" name="foodName">
        </div>
        <div class="form-group">
            <label for="Price">Price:</label>
            <input type="number" class="form-control" id="Price" name="Price">
        </div>
        <div class="form-group">
            <label for="Status">Status:</label>
            <input type="number" class="form-control" id="Status" name="Status">
        </div>
        <div class="form-group">
            <label for="Mota">Description:</label>
            <textarea class="form-control" id="Mota" name="Mota" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="RemainingQuantity">Remaining Quantity:</label>
            <input type="number" class="form-control" id="RemainingQuantity" name="RemainingQuantity">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Admin" asp-action="FoodAll" class="btn btn-secondary">Back</a>
    </form>
</body>
</html>
