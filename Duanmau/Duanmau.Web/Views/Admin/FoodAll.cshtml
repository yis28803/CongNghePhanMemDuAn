@* Bố cục HTML gồm danh sách sản phẩm *@
@* @model List<AdvancedEshop.Web.API.Models.FoodViewModel> *@
@model List<Duanmau.Web.API.Models.Food>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Foods</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <style>
        /* FoodListStyles.css */
        /* Style cho table */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            /* Style cho table header */
            .table th {
                background-color: #f0f0f0;
                text-align: left;
                padding: 8px;
            }

            /* Style cho table data */
            .table td {
                padding: 8px;
            }

            /* Style cho nút Actions */
            .table.action-buttons button {
                padding: 6px 12px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                color:red
            }

            /* Style cho nút Details */
            .table.action-buttons.details {
                background-color: #007bff;
                color: #fff;
            }

            /* Style cho nút Edit */
            .table.action-buttons.edit {
                background-color: #28a745;
                color: #fff;
            }

            /* Style cho nút Delete */
            .table.action-buttons.delete {
                background-color: #dc3545;
                color: #fff;
            }

            /* Style cho nút Create Food */
            .table.action-buttons.create {
                background-color: #fd7e14;
                color: #fff;
            }

    </style>
</head>
<body>
    <h2>All Foods3333333333</h2>

    <table class="table">
        <thead>
            <tr>
                <th>FoodId</th>
                <th>FoodName</th>
                <th>Price</th>
                <th>Status</th>
                <th>Mota</th>
                <th>RemainingQuantity</th>
                <th>Actions</th>
                                    
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var food in Model)
                {
                    <tr>
                        <td>@food.FoodId</td>
                        <td>@food.FoodName</td>
                        <td>@food.Price</td>
                        <td>@food.Status</td>
                        <td>@food.Mota</td>
                        <td>@food.RemainingQuantity</td>
                         <td>
                            <form asp-controller="Admin" asp-action="FoodDetails" method="get">
                                <input type="hidden" name="id" value="@food.FoodId" />
                                <button type="submit" style="background-color: orange; color:white;">Details</button>
                            </form>
                        </td>
                        
                        <td>
                            <form asp-controller="Admin" asp-action="FoodEdit" method="get">
                                <input type="hidden" name="id" value="@food.FoodId" />
                                <button type="submit" style="background-color: orange; color:white;">Edit</button>
                            </form>
                        </td>
                        
                        <td>
                            <form asp-controller="Admin" asp-action="FoodDelete" method="post" onsubmit="return confirm('Are you sure you want to delete this Food?');">
                                <input type="hidden" name="id" value="@food.FoodId" />
                                <button type="submit" style="background-color: orange; color:white;">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <p>Không có dữ liệu sản phẩm.</p>
            }
             <tr>
                <td colspan="11">
                    <form asp-controller="Admin" asp-action="FoodCreate" method="get">
                        <button type="submit" style="background-color: orange; color: white;">Create Food</button>
                    </form> 
                </td>
            </tr> 
        </tbody>
    </table>
</body>
</html>
