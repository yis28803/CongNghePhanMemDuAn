@model List<Duanmau.Web.API.Models.Food>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Foods</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.5.1-web/css/all.min.css">

    <style>
        /* Style cho table */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            /* Style cho table header */
            .table th {
                background-color: #f0f0f0;
                text-align: left;
                padding: 8px;
                border: 1px solid #dee2e6;
            }

            /* Style cho table data */
            .table td {
                padding: 8px;
                border: 1px solid #dee2e6; /* Màu và độ rộng của đường viền */
            }

            /* Style cho nút Actions */
            .table.action-buttons button {
                padding: 6px 12px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                color: red
            }

            /* Style cho nút Details */
            .table.action-buttons.details {
                background-color: #007bff;
                color: #fff;
            }

            /* Style cho nút Edit */
            .table.action-buttons.edit {
                background-color: #28a745;
                color: #fff;
            }

            /* Style cho nút Delete */
            .table.action-buttons.delete {
                background-color: #dc3545;
                color: #fff;
            }

            /* Style cho nút Create Food */
            .table.action-buttons.create {
                background-color: #fd7e14;
                color: #fff;
            }

        .add-button {
            background-color: green;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            margin-right: 100px;
        }

            .add-button:hover {
                background-color: darkgreen;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h2>Tất cả Food</h2>
        <form asp-controller="Admin" asp-action="FoodCreate" method="get">
            <button type="submit" class="add-button"><i class="fa-solid fa-plus"></i> Thêm</button>
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>FoodId</th>
                <th>FoodName</th>
                <th>Price</th>
                <th>Status</th>
                <th>Mota</th>
                <th>RemainingQuantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var food in Model)
                {
                    <tr>
                        <td>@food.FoodId</td>
                        <td>@food.FoodName</td>
                        <td>@food.Price</td>
                        <td>@food.Status</td>
                        <td>@food.Mota</td>
                        <td>@food.RemainingQuantity</td>
                        <td>
                            <div style="display: flex;">
                                <form asp-controller="Admin" asp-action="FoodEdit" method="get" style="margin-right: 10px;">
                                    <input type="hidden" name="id" value="@food.FoodId" />
                                    <button type="submit" style="background-color: orange; color:white;"><i class="fa-regular fa-pen-to-square"></i></button>
                                </form>
                                <form asp-controller="Admin" asp-action="FoodDelete" method="post" onsubmit="return confirm('Are you sure you want to delete this Food?');">
                                    <input type="hidden" name="id" value="@food.FoodId" />
                                    <button type="submit" style="background-color: red; color:white;"><i class="fa-solid fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <p>Không có dữ liệu sản phẩm.</p>
            }
        </tbody>
    </table>
</body>
</html>
